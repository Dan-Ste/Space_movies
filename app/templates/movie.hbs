<div class="container media-frame">
  <div class="row">
  	<div class="col-lg-12">
    	<h1 class="media-frame__title">{{model.movie.data.title}}</h1>
      {{#if model.movie.data.tagline}}
        <h4>{{model.movie.data.tagline}}</h4>
      {{/if}}
    </div>
  </div>
  <div class="row media-frame__section">
    <div class="col-lg-4">
      <div class="media-frame__picture">
      	<img src="{{model.movie.posterUrl}}" alt="">
      </div>
    </div>
    <div class="col-lg-8">
      <dl>
        <dt><h6>Описание:</h6></dt>
        {{#if model.movie.data.overview}}
          <dd>{{model.movie.data.overview}}</dd>
        {{else}}
          <dd>-</dd>
        {{/if}}
      </dl>
      <table class="table table-striped table-hover ">
        <tbody>
          <tr>
            <td>Жанры:</td>
            <td>
              <ul class="genre-list">
                {{#if model.movie.data.genres.length}}
                  {{#each model.movie.data.genres as |genre|}}
                    <li class="genre-list__item">{{genre.name}} /</li>
                  {{/each}}
                {{else}}
                  <li class="genre-list__item">-</li>
                {{/if}}
              </ul>
            </td>
          </tr>
          {{#if model.movie.data.homepage}}
            <tr>
              <td>Сайт:</td>
              <td><a {{bind-attr href=model.movie.data.homepage}}>{{model.movie.data.homepage}}</a></td>
            </tr>
          {{/if}}
          <tr>
            <td>Рейтинг:</td>
            {{#if model.movie.data.vote_average}}
              <td>{{model.movie.data.vote_average}} / 10</td>
            {{else}}
              <td>-</td>
            {{/if}}
          </tr>
          <tr>
            <td>Дата релиза:</td>
            {{#if model.movie.data.release_date}}
              <td>{{model.movie.data.release_date}}</td>
            {{else}}
              <td>-</td>
            {{/if}}
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12">
      {{#if model.movie.trailer}}
        <h5>Трейлер на русском</h5>
        <div class="trailer-container">
          {{trailer-player model=model.movie.trailer}}
        </div>
      {{else if model.trailer.data}}
        <h5>Трейлер на английском</h5>
        <div class="trailer-container">
          {{trailer-player model=model.trailer.data}}
        </div>
      {{else}}
      {{/if}}
    </div>
  </div>
</div>
<div class="backdrop-container">
  {{backdrop-image model=model.movie}}
</div>
